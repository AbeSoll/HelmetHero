<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 10, 2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textTripStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Completed"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textTripDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration • 35 min"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textTripDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance • 17.8 km"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/textTripAvgSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Speed • 30.5 km/h"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
