<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="@android:color/transparent">

    <!-- Invite code input with rounded background -->
    <EditText
        android:id="@+id/editRiderCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Rider Invite Code"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="18dp"/>

    <!-- QR scan button, prominent style -->
    <Button
        android:id="@+id/btnScanQr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Scan QR Code"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/rounded_lightblue_box"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_qr_code_24"
        android:drawablePadding="10dp"/>
</LinearLayout>
