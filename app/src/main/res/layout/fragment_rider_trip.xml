<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trip_frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ—ºï¸ Google Map Fragment -->

    <!-- ðŸ§¾ Overlay for Helmet + Stats + End Button -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="top|center_horizontal"
        android:layout_gravity="top"
        android:background="@android:color/transparent">

        <!-- âœ… Helmet Status Banner -->
        <TextView
            android:id="@+id/textHelmetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¢ Helmet Connected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_overlay_dark"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"/>

        <!-- ðŸ“Š Trip Stats Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_overlay_dark"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <!-- â± Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="12sp"
                    android:textColor="#DDDDDD"/>
            </LinearLayout>

            <!-- ðŸ“ Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 km"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="12sp"
                    android:textColor="#DDDDDD"/>
            </LinearLayout>

            <!-- âš¡ Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textCurrentSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 km/h"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="12sp"
                    android:textColor="#DDDDDD"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”´ End Trip Button -->
        <Button
            android:id="@+id/btnEndTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Trip"
            android:backgroundTint="#B00020"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:elevation="3dp"/>

        <Button
            android:id="@+id/btnSos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SOS"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"/>

    </LinearLayout>

</FrameLayout>
