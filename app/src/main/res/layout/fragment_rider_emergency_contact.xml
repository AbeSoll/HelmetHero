<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#DDE9FF">

    <!-- Title -->
    <TextView
        android:id="@+id/textEmergencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Emergency Contact"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView (set height to 0dp with weight to leave space for Save button) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEmergencyContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:paddingBottom="8dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="#1E2D60"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="12dp" />
</LinearLayout>
